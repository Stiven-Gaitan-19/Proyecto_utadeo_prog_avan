<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>

        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>

        <!-- Assume test is the database name -->
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/the_river_rover?serverTimezone=UTC</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">123456789</property>

        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">create</property>

        <mapping class="co.edu.utadeo.domain.Agencia"/>
        <mapping class="co.edu.utadeo.domain.Aparicion"/>
        <mapping class="co.edu.utadeo.domain.Artista"/>
        <mapping class="co.edu.utadeo.domain.Caracteristica"/>
        <mapping class="co.edu.utadeo.domain.Coleccion"/>
        <mapping class="co.edu.utadeo.domain.Foto"/>
        <mapping class="co.edu.utadeo.domain.GeneroMusical"/>
        <mapping class="co.edu.utadeo.domain.Modelo"/>
        <mapping class="co.edu.utadeo.domain.Pais"/>
        <mapping class="co.edu.utadeo.domain.Desfile"/>
        <mapping class="co.edu.utadeo.domain.Disenador"/>
        <mapping class="co.edu.utadeo.domain.Empleado"/>
        <mapping class="co.edu.utadeo.domain.EmpleadoDirectivo"/>
        <mapping class="co.edu.utadeo.domain.EmpleadoRaso"/>
        <mapping class="co.edu.utadeo.domain.Evento"/>
        <mapping class="co.edu.utadeo.domain.Portafolio"/>
        <mapping class="co.edu.utadeo.domain.Pabellon"/>
    </session-factory>
</hibernate-configuration>